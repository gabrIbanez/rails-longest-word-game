
<div class="container">
  <div class="jumbotron">
    <h2>Le Jeu du Mot le Plus Long</h2>
    <ul>
      <% @letters.each do |lettre| %>
       <li class="btn btn-primary"><%= lettre %></li>
      <% end %>
    </ul>
    <form action="/score" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input type="text" name="word" placeholder="Your word">
      <input class="btn btn-danger" type="submit">
    </form>
  </div>
</div>
